{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "NotificationService",
    "TemplatesCollection": "notification_templates",
    "HistoryCollection": "notification_history",
    "ConnectionTimeoutSeconds": 30,
    "SocketTimeoutSeconds": 30,
    "MaxConnectionPoolSize": 100
  },
  
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Database": 0,
    "KeyPrefix": "NotificationService:",
    "DefaultExpirationMinutes": 60,
    "TemplateCacheExpirationMinutes": 120,
    "UserPreferencesCacheExpirationMinutes": 30,
    "ConnectTimeoutMs": 5000,
    "SyncTimeoutMs": 5000
  },
  
  "RabbitMq": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "NotificationQueue": "notifications",
    "Exchange": "notification_exchange",
    "RoutingKey": "notification.send",
    "ConnectionTimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "InitialDelayMs": 1000,
    "MaxDelayMs": 30000
  },
  
  "Email": {
    "Provider": "SendGrid",
    "SendGridApiKey": "YOUR_SENDGRID_API_KEY_HERE",
    "FromEmail": "noreply@example.com",
    "FromName": "Notification Service",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "Username": "your-email@gmail.com",
      "Password": "your-app-password",
      "EnableSsl": true
    }
  },
  
  "Sms": {
    "Provider": "Twilio",
    "TwilioAccountSid": "YOUR_TWILIO_ACCOUNT_SID_HERE",
    "TwilioAuthToken": "YOUR_TWILIO_AUTH_TOKEN_HERE",
    "TwilioFromNumber": "+1234567890"
  },
  
  "Push": {
    "FcmServerKey": "YOUR_FCM_SERVER_KEY_HERE",
    "FcmProjectId": "your-firebase-project-id",
    "FcmServiceAccountPath": "path/to/your/firebase-service-account.json"
  }
}
